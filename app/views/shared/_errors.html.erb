<% if obj.errors.any? %>
<section id="errors">
  <header>
    <h2>
      Oops! The <%= obj.class.name.humanize.downcase %> could not be saved. 
    </h2>
    <h3>
      Please correct the following <%= pluralize(obj.errors.count, "error") %>:
    </h3>
  </header>
  <ul>
    <% obj.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</section>
<% end %>